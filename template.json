{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "payara-example",
    "annotations": {
      "description": "An example Payara application",
      "tags": "payara",
      "iconClass": "icon-nodejs"
    }
  },
  "labels": {
    "template": "payara-example"
  },
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "payara-example",
        "annotations": {
          "description": "Exposes and load balances the application pods"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "port": 8080,
            "targetPort": 8080
          },
          { 
            "name": "web",
            "port": 4848,
            "targetPort": 4848
          }
        ],
        "selector": {
          "name": "payara-example"
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "payara-example"
      },
      "spec": {
        "host": "${APPLICATION_DOMAIN}",
        "to": {
          "name": "payara-example"
          "kind": "Service",
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "payara-example",
        "annotations": {
          "description": "Keeps track of changes in the application image"
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "payara-example",
        "annotations": {
          "description": "Defines how to build the application"
        }
      },
      "spec": {
        "source": {
          "type": "Git",
          "git": {
            "uri": "${SOURCE_REPOSITORY_URL}",
            "ref": "${SOURCE_REPOSITORY_REF}"
          },
          "contextDir": "${CONTEXT_DIR}"
        },
        "strategy": {
          "type": "Docker",
          "dockerStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "namespace": "test",
              "name": "ubuntu:latest"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "payara-example:latest"
          }
        },
        "triggers": [
          {
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          },
          {
            "type": "GitHub",
            "github": {
              "secret": "${GITHUB_WEBHOOK_SECRET}"
            }
          },
          {
            "type": "Generic",
            "generic": {
              "secret": "${GENERIC_WEBHOOK_SECRET}"
            }
          }
        ]
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "payara-example",
        "annotations": {
          "description": "Defines how to deploy the application server"
        }
      },
      "spec": {
        "strategy": {
          "type": "Rolling"
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "payara-example"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "payara-example:latest"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "payara-example"
        },
        "template": {
          "metadata": {
            "name": "payara-example",
            "labels": {
              "name": "payara-example"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "payara-example",
                "image": "payara-example",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 4848,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "DATABASE_SERVICE_NAME",
                    "value": "${DATABASE_SERVICE_NAME}"
                  },
                  {
                    "name": "MONGODB_USER",
                    "value": "${MONGODB_USER}"
                  },
                  {
                    "name": "MONGODB_PASSWORD",
                    "value": "${MONGODB_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_DATABASE",
                    "value": "${MONGODB_DATABASE}"
                  },
                  {
                    "name": "MONGODB_ADMIN_PASSWORD",
                    "value": "${MONGODB_ADMIN_PASSWORD}"
                  }
                ]
              }
            ]
          }
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "APPLICATION_NAME",
      "description": "Name of the application",
      "value": "payara-example"
    },
    {
      "name": "SOURCE_REPOSITORY_URL",
      "description": "The URL of the repository with your application source code",
      "value": "https://github.com/snoopyCode/payara-openshift-example.git"
    },
    {
      "name": "SOURCE_REPOSITORY_REF",
      "description": "Set this to a branch name, tag or other ref of your repository if you are not using the default branch"
    },
    {
      "name": "CONTEXT_DIR",
      "description": "Set this to the relative path to your project if it is not in the root of your repository"
    },
    {
      "name": "APPLICATION_DOMAIN",
      "description": "The exposed hostname that will route to the Node.js service, if left blank a value will be defaulted.",
      "value": ""
    },
    {
      "name": "SOURCE_REPOSITORY_URL",
      "description": "The URL of the repository with your application source code",
      "value": "https://github.com/snoopyCode/payara-openshift-example.git"
    },
    {
      "name": "GITHUB_WEBHOOK_SECRET",
      "description": "A secret string used to configure the GitHub webhook",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}",
      "value": "ZGgW7iBbCnHShWQDR8Lp"
    },
    {
      "name": "GENERIC_WEBHOOK_SECRET",
      "description": "A secret string used to configure the Generic webhook",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}",
      "value": "QQrhFXNs9pGqf_BiqhB_"
    },
    {
      "name": "DATABASE_SERVICE_NAME",
      "description": "Database service name"
    },
    {
      "name": "MONGODB_USER",
      "description": "Username for MongoDB user that will be used for accessing the database"
    },
    {
      "name": "MONGODB_PASSWORD",
      "description": "Password for the MongoDB user"
    },
    {
      "name": "MONGODB_DATABASE",
      "description": "Database name"
    },
    {
      "name": "MONGODB_ADMIN_PASSWORD",
      "description": "Password for the database admin user"
    }
  ]
}
